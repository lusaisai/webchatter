extends layout

block content
	div.col-md-2
	div.col-md-8
		form( method="post", action="/signup/new", class="form-horizontal", role="form")
			fieldset
				div.form-group
					lable(for="name", class="col-lg-2 control-label") Username
					div.col-lg-3: input(type="text", id="name", name="name", class="form-control", placeholder="Username")
				div.form-group
					lable(for="email", class="col-lg-2 control-label") Email
					div.col-lg-3: input(type="text", id="email", name="email", class="form-control", placeholder="Email")
				div.form-group
					lable(for="password", class="col-lg-2 control-label") Password
					div.col-lg-3: input(type="password", id="password", name="password", class="form-control", placeholder="Password")
				div.form-group
					lable(for="repeat-password", class="col-lg-2 control-label") Repeat Password
					div.col-lg-3: input(type="password", id="repeat-password", name="repeat-password", class="form-control", placeholder="Password")

				div.col-lg-offset-2: button(type="submit", class="btn btn-primary" ) Sign Up

		if data
			if data.name
				script $('#name').attr('value', '#{data.name}');
			if data.email
				script $('#email').attr('value', '#{data.email}');
			if data.error
				div(class="alert alert-danger") #{data.error}

